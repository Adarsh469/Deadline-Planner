// Prisma schema for Deadline Manager
// PostgreSQL (Supabase compatible)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DeadlinePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DeadlineStatus {
  PENDING
  BLOCKED
  COMPLETED
  OVERDUE
}

enum RecurrenceUnit {
  DAILY
  WEEKLY
  MONTHLY
}

enum NotificationType {
  UPCOMING
  ESCALATING
  OVERDUE
}

model User {
  id              String      @id @default(cuid())
  name            String?
  email           String?     @unique
  emailVerified   DateTime?
  image           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  deadlines       Deadline[]
  recurrences     Recurrence[]
  notifications   Notification[]
  accounts        Account[]
  sessions        Session[]
}

model Deadline {
  id              String            @id @default(cuid())
  userId          String
  title           String
  description     String?
  dueDate         DateTime
  priority        DeadlinePriority  @default(MEDIUM)
  status          DeadlineStatus    @default(PENDING)
  category        String?
  urgencyScore    Float             @default(0)
  recurrenceId    String?
  completedAt     DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user            User              @relation(fields: [userId], references: [id])
  recurrence      Recurrence?       @relation(fields: [recurrenceId], references: [id])
  dependencies    DeadlineDependency[] @relation("dependency_parent")
  dependents      DeadlineDependency[] @relation("dependency_child")
  notifications   Notification[]

  @@index([dueDate])
  @@index([status])
  @@index([urgencyScore])
  @@index([userId, dueDate])
  @@index([userId, status])
  @@index([userId, priority])
  @@index([userId, completedAt])
  @@index([recurrenceId, dueDate])
  @@unique([recurrenceId, dueDate])
}

model DeadlineDependency {
  id             String   @id @default(cuid())
  blockerId      String
  blockedId      String
  createdAt      DateTime @default(now())

  blocker        Deadline @relation("dependency_parent", fields: [blockerId], references: [id])
  blocked        Deadline @relation("dependency_child", fields: [blockedId], references: [id])

  @@unique([blockerId, blockedId])
  @@index([blockedId])
}

model Recurrence {
  id             String         @id @default(cuid())
  userId         String
  title          String
  description    String?
  priority       DeadlinePriority @default(MEDIUM)
  category       String?
  unit           RecurrenceUnit
  interval       Int            @default(1)
  startDate      DateTime
  endDate        DateTime?
  lastGeneratedAt DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user           User           @relation(fields: [userId], references: [id])
  deadlines      Deadline[]

  @@index([userId, unit])
  @@index([userId, startDate])
}

model Notification {
  id           String           @id @default(cuid())
  userId       String
  deadlineId   String?
  type         NotificationType
  title        String
  body         String
  scheduledAt  DateTime
  createdAt    DateTime         @default(now())
  seenAt       DateTime?

  user         User             @relation(fields: [userId], references: [id])
  deadline     Deadline?        @relation(fields: [deadlineId], references: [id])

  @@index([userId, createdAt])
  @@index([userId, seenAt])
  @@unique([userId, deadlineId, type, scheduledAt])
}

// NextAuth.js models (Supabase friendly)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
